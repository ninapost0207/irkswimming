{% extends "../_layout.twig" %}
{% set pageTitle = 'Contacts page' %}

{% set contacts_icons = [
	{
		url: "https://instagram.com/swimming.irkutsk?igshid=NTc4MTIwNjQ2YQ==",
		img_url: "../../assets/images/icons/instagram_icon.svg",
		img_alt: "instagram"
	},	{
		url: "https://t.me/fpiobaikal",
		img_url: "../../assets/images/icons/telegram_icon.svg",
		img_alt: "telegram"
	},	{
		url: "https://vk.com",
		img_url: "../../assets/images/icons/vk_icon.svg",
		img_alt: "vkontakte"
	}
] %}

{% block header %}
	{% include '../layouts/_header.twig' %}
{% endblock %}

{% block content %}

	<section class="content">
		<div class="contacts-page__background">
			<div class="contacts-page__container container">
				<form id="form-submit">
					<h2>Leave a Request</h2>
					<label for="name">Your Name*</label>
					<input type="text" id="name" autocomplete="name" required/>
					<label for="phone">Phone Number*</label>
					<input type="tel" id="phone" name="phone" pattern="[0-9]{11}" autocomplete="phone" required/>
					<label for="info">Additional Information</label>
					<textarea name="info" id="info" rows="8" cols="50" autocomplete="off"></textarea>
					<button type="submit">Send</button>
				</form>
				<div class="contacts-page__contacts">
					<p>Phone, Email:</p>
					<div class="contacts-page__contacts__item">
						<a href="tel:+7111111111111" target="_blank" area-label="phone">
							<div class="row align-center">
								<img src="../../assets/images/icons/phone3_icon.svg" alt="phone" class="contacts-page__contacts__item__icon">
								<p class="contacts-page__contacts__item_right text-underlined">+7 111111111111</p>
							</div>
						</a>

						<a href="mailto:email_address@gmail.com" target="_blank" area-label="email">
							<div class="row align-center">
								<img src="../../assets/images/icons/email1_icon.svg" alt="email" class="contacts-page__contacts__item__icon">
								<p class="contacts-page__contacts__item_right text-underlined">email_address@gmail.com</p>
							</div>
						</a>
					</div>
					<p>Address:</p>
					<div class="contacts-page__contacts__item">
						<a href="https://go.2gis.com/akm0i" target="_blank" area-label="address">
							<div class="row align-center">
								<img src="../../assets/images/icons/location3_icon.svg" alt="address" class="contacts-page__contacts__item__icon">
								<p class="contacts-page__contacts__item_right text-underlined">664050, Irkutsk Region, Irkutsk, Baikalskaya Street, 253/1</p>
							</div>
						</a>
					</div>
					<p>We are on social media:</p>
					<div class="contacts-page__contacts__item">
						<div class="row social-icons__block">
							{% for icon in contacts_icons %}
								<a href="{{ icon.url }}" target="_blank" area-label="{{ icon.img_alt}}">
									<img src="{{ icon.img_url }}" alt="{{ icon.img_alt}}">
								</a>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			<div class="modal">
				<h1>Your request has been submitted</h1>
				<p>Our administrator will contact you shortly</p>
			</div>
		</div>
	</section>


{% endblock %}

{% block footer %}
	{% include '../layouts/_footer.twig' %}
{% endblock %}
