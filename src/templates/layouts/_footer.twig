] %}

<footer>
	<div class="footer__menu container">
		<div class="footer__menu_left-block">
			<h1>Federation of Swimming of Irkutsk Region "Baikal"</h1>
			<p>We instill in children the desire to win, discipline, endurance, and a sports spirit.
			</p>
		</div>
		<div class="footer__line"></div>
		<div class="footer__menu_right-block">
			{% for contact in footer_contacts %}
				<a href="{{ contact.url }}" target="_blank" area-label="{{ contact.img_alt }}">
					<div class="row footer__contacts__block">
						<img src="{{ contact.img_url }}" alt="{{ contact.img_alt }}" class="footer__icon">
						<p class="footer__contacts__block__text text-underlined">{{ contact.text }}</p>
					</div>
				</a>
			{% endfor %}
		</div>
	</div>

	<div class="footer__rights">
		<div class="footer__rights__container row container">
			<p>Federation of Swimming of Irkutsk Region<br>Copyright Â© 2023 All rights reserved</p>
			<div class="row">
				{% for icon in footer_icons %}
					<a href="{{ icon.url }}" target="_blank" area-label="{{ icon.img_alt }}">
						<img src="{{ icon.img_url }}" class="footer__rights__icon" alt="{{ icon.img_alt }}">
					</a>
				{% endfor %}
			</div>
		</div>
	</div>
</footer>
